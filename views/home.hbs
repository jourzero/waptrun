-->
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3 class="panel-title">Projects</h3>
    </div>

    <table class="projectList">
        {{#projects}}
            <tr>
                <!--
                <td class="issueDeleteTD" width="20px">
                    <button class="delete" title="Delete this project" action="delete" prjName='{{name}}'>&times;</button></td> -->
                <td><a href="/project/{{name}}">{{name}}</a></td>
                <td><a href="/testing/{{name}}">Start Testing</td>
            </tr>
        {{/projects}}
    </table>

    <div>
        <button id="btnNewPrj"      class="button black"       title="Create a new project." onclick="showCreateNewProjectBtn();">Create Project</button>
        <button id="btnDelPrj"      class="button black"       title="Remove a project."     onclick="showRemoveProjectBtn();">Remove Project</button>
        <button id="btnCsvExport"   class="button black"       title="Export all issue data from all projects as CSV and download." onclick="window.open('/issues.csv', 'DownloadWin')">Export all</button>
    </div>
    <div id="newProjectDiv" hidden="true">
        <br>
        Enter new project name: <input type="text" id="newProjectInput" placeholder="YYYYMM-PRJNAME-ENV" />
    </div>
    <div id="delProjectDiv" hidden="true">
        <br>
        Enter project name to delete: <input type="text" id="delProjectInput"" />
    </div>
 
    <div class="panel-body">
        Static Content: 
      <a href="{{TestRefBase}}/sec542/index.htm">SEC-542</a> | 
      <a href="{{TestRefBase}}/sec642/index.htm">SEC-642</a> | 
      <a href="{{TestRefBase}}/wahh2/index.htm">WAHHv2</a>   | 
      <a href="{{TestRefBase}}/websvc/Web_Services_Assessment_Methodology.pdf">Web Services</a> 
    </div>

  </div>


{{else}}
  <div class="jumbotron">
    <p>Hello, welcome!
      <a href="/signin" class="btn btn-primary btn-lg" role="button">
        Go to login screen
      </a>
    </p>
  </div>
  
{{/if}}
   
<script src="/js/rest.js"></script>
<script src="/js/home.js"></script>   